<Window x:Class="tloo.Cinemas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tloo"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Cinemas" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <Window.Background>
        <ImageBrush  ImageSource="image/background.jpg"/>

    </Window.Background>
    <Grid>
        <ListBox x:Name="CinemasListview" HorizontalAlignment="Left" Height="169" Margin="432,113,0,0" VerticalAlignment="Top" Width="314" MouseDoubleClick="CinemasListview_MouseDoubleClick"/>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Height="35" Margin="462,328,0,0" VerticalAlignment="Top" Width="103" Click="AddButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Height="35" Margin="618,328,0,0" VerticalAlignment="Top" Width="102" Click="DeleteButton_Click"/>
        <Label FontSize="20" Content="CINEMAS" HorizontalAlignment="Left" Margin="97,72,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
