<Window x:Class="tloo.Movies"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tloo"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Movies" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <Window.Background>
        <ImageBrush  ImageSource="image/background.jpg"/>

    </Window.Background>
    <Grid>
        <ListBox x:Name="MoviesListview" HorizontalAlignment="Left" Height="186" Margin="432,127,0,0" VerticalAlignment="Top" Width="325"/>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Height="35" Margin="461,332,0,0" VerticalAlignment="Top" Width="110" Click="AddButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Height="35" Margin="626,332,0,0" VerticalAlignment="Top" Width="102" Click="DeleteButton_Click"/>
        <Label FontSize="20" Content="MOVIES" HorizontalAlignment="Left" Margin="120,66,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
